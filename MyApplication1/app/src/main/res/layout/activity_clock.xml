<?xml version="1.0" encoding="utf-8"?><!--#113时钟展示-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!--定义模拟时钟-->
    <AnalogClock android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <!--定义数字时钟-->
    <TextClock android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="10pt"
        android:textColor="#f0f"
        android:format24Hour="yyyy年MM月dd日 H:mma EEEE" />
    <!--定义模拟时钟，并使用自定义表盘及表针-->
    <AnalogClock android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dial="@drawable/watch"
        android:hand_minute="@drawable/hand"/>
</LinearLayout>