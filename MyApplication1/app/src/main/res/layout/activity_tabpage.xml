<?xml version="1.0" encoding="utf-8"?>
<!--#125Tab页
注意：TabHost的ID应该为@android：id/tabhost
      TabWidth的ID为@android:id/tabs
      FrameLayout的ID为@android:id/tabcontent
      上述三个ID不是开发者自己定义，而是引用了Android系统已有的ID-->
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@android:id/tabhost"
    android:layout_weight="1"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TabWidget android:id="@android:id/tabs"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>
        <FrameLayout android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--定义第一个标签页的内容-->
            <LinearLayout android:id="@+id/tab01"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="今天是个好天气"/>
            </LinearLayout>
            <!--定义第二个标签页的内容-->
            <LinearLayout android:id="@+id/tab02"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="今天是个好天气"/>
                <TextView android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="今天是个好天气啊啊"/>
            </LinearLayout>
            <!--定义第三个标签页的内容-->
            <LinearLayout android:id="@+id/tab03"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="今天是个好天气"/>
                <TextView android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:text="今天是个好天气哦哦"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

</TabHost>